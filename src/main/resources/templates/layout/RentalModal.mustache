<!-- 버튼 -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#rentalModal" >
    대여
</button>
<!-- 모달 팝업 -->
<div class="modal fade" id="rentalModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">대여 신청</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <form>
                            <div class="form-group">
                                <label for="title">도서 제목</label>
                                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
                                {{#books}}{{bookinfo.name}}{{/books}}
                            </div>
                            <div class="form-group">
                                <label for="author">작성자</label>
                                <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요.">
                                {{#user}}{{username}}{{/user}}
                            </div>
                            <div class="form-group">
                                <label for="content">인적 사항</label>
                                <textarea class="form-control" id="content" placeholder="학번과 연락처를 입력하세요."></textarea>
                                {{#user}}{{user.Student_ID}}{{/user}}
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">취소</button>
                <button type="button" class="btn btn-primary" id="rentalsubmit">제출</button>
            </div>
        </div>
    </div>
</div>