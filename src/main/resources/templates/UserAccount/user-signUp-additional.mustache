{{>layout/header}}

<div class="container" style="text-align: center; padding-top: 50px; padding-bottom: 50px;">

    <h1>회원가입 :: 사용자 정보 입력</h1>
    <div class="row">
        <div class="col-md-12">

                <form name="userAdd" method="post" action="/welcome">
                    <div class="form-group">
                        <label for="title">이름</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="이름"/>
                    </div>
                    <div class="form-group">
                        <label for="studentID">학번</label>
                        <input type="text" class="form-control" id="studentID" name="studentID" placeholder="학번"/>
                    </div>
                    <button type="submit" class="btn btn-primary">가입하기</button>
                </form>

        </div>
    </div>
</div>

